@model Vidly.Models.Movie
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.GenreType.Name</li>
    <li>Release Date:
        @if (Model.ReleaseDate != null)
        {
            @Model.ReleaseDate.Value.ToLongDateString()
        }
    </li>
    <li>
        Date Added:
        @if (Model.DateAdded != null)
        {
            @Model.DateAdded.Value.ToLongDateString()
        }

    </li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

<p>@Html.ActionLink("Back to Movies", "Index", "Movies")</p>